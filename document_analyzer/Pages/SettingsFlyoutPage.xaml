<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="document_analyzer.Pages.SettingsFlyoutPage"
             >

        <FlyoutPage.Flyout>
        <ContentPage Title="Settings Menu">
            <StackLayout>
                <Label Text="Settings Menu" FontSize="Large" Padding="10"/>
                <Button Text="Option 1" />
                <Button Text="Option 2" />
                <Button Text="Option 3" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Settings">
                    <StackLayout>
                        <Label Text="Settings Page Content" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
