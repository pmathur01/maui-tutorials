<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="document_analyzer.Pages.LoginPage">

    <StackLayout Padding="30" VerticalOptions="Center">

        <Label Text="Login" FontSize="36" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" />

        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" />

        <!-- Error Label -->
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>

